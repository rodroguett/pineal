<%- model_class = Record -%>
<div class="page-header">
  <h1>Concurso</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>VP:</strong></dt>
  <dd><%= @record.vp %></dd>
  <dt><strong>Gerencia:</strong></dt>
  <dd><%= @record.gerencia %></dd>
  <dt><strong>SI:</strong></dt>
  <dd><%= @record.si %></dd>
  <dt><strong>Cargo:</strong></dt>
  <dd><%= @record.cargo %></dd>
  <dt><strong>Rol:</strong></dt>
  <dd><%= @record.rol %></dd>
  <dt><strong>N° Vacantes:</strong></dt>
  <dd><%= @record.nvacantes %></dd>
  <dt><strong>APTO:</strong></dt>
  <dd><%= @record.apto %></dd>
  <dt><strong>NO APTO:</strong></dt>
  <dd><%= @record.noapto %></dd>
  <dt><strong>EN COORDINACIÓN:</strong></dt>
  <dd><%= @record.encoordinacion %></dd>
  <dt><strong>N° Postulantes:</strong></dt>
  <dd><%= @record.npostulantes %></dd>
  <dt><strong>Días Concurso:</strong></dt>
  <dd><%= @record.diasconcurso %></dd>
  <dt><strong>Fecha Apertura:</strong></dt>
  <dd><%= @record.fechaapertura %></dd>
  <dt><strong>Fecha Aprobación CEO:</strong></dt>
  <dd><%= @record.fechaaprobacionceo %></dd>
  <dt><strong>Fecha Ingreso:</strong></dt>
  <dd><%= @record.fechaingreso %></dd>
  <dt><strong>Status:</strong></dt>
  <dd><%= @record.status %></dd>
  <dt><strong>Comentario:</strong></dt>
  <dd><%= @record.comentario %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              records_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_record_path(@record), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              record_path(@record),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
